<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   minWidth="955"
			   minHeight="600">
	<s:layout>
		<s:VerticalLayout verticalAlign="middle"
						  horizontalAlign="center"/>
	</s:layout>

	<fx:Script>
		<![CDATA[
			protected function sliderChangeHandler(event:Event):void
			{
				trace(cornerRadiusSlider.value);
				testButton.setStyle("cornerRadius", cornerRadiusSlider.value);
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Button id="testButton"
			  accentColor="#00FFFF"
			  chromeColor="#e1e1e1"
			  color="#333333"
			  cornerRadius="3"
			  errorColor="#33dddd"
			  focusAlpha="1.0"
			  focusColor="#00DDDD"/>
	<s:HSlider id="cornerRadiusSlider"
			   maximum="100"
			   minimum="0"
			   change="sliderChangeHandler(event)"/>
</s:Application>
